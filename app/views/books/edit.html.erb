<%= render 'books/error', model: @book %>
<div class="container">
<%= form_with model:@book, local:true do |f| %>
<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
     <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, autofocus: true, class:"form-control", id:"book_title"%>
        </div>

     <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, autofocus: true, class:"form-control", id:"book_body"%>
        </div>

     <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success"%>
        </div>

      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
   </div>
  </div>
  <% end %>
<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>