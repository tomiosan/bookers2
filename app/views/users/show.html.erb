<p id="notice"></p>
<%= render 'books/error', model: @book %>
<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">
     <%= render 'users/user', user: @user %>
       <%= render 'books/book', book: @book %>
   </div>
   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class="table table-user-show">
       <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Option</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
             <%= link_to attachment_image_tag(book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg"), user_path(book.user.id) %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
       </tbody>
      </table>
  </div>
 </div>
</div>
<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
