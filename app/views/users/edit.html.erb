<p id="notice"></p>
<%= render 'books/error', model: @user %>
<div class="container">
<%= form_with model:@user, local:true do |f| %>
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
    <div class="form-group">
      <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前" %>
    </div>

    <div class="form-group">
      <label for="user-image">image</label><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>

    <div class="form-group">
      <label for="user_introduction">introduction</label>
        <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail" %>
    </div>

    <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
    </div>
  </div>
</div>
<% end %>
<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>