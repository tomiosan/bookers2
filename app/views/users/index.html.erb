<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">
     <%= render 'users/user', user: @user %>
       <%= render 'books/book', book: @book %>
       </div>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
	  	 <tr>
	  	  <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30,fallback: "no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" %></td>
	  	  <td><%= user.name %></td>
	  	  <td><%= link_to "Show", "/users/#{user.id}" %></td>
	  	 </tr>
  	  	  <% end %>
    </tbody>
  </table>
</div>
 </div>
</div>


